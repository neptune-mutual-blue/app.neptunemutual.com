{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "jsx": "preserve",
    "checkJs": true,
    "baseUrl": ".",
    "paths": {
      "@/lib/*": ["lib/*"],
      "@/locales/*": ["locales/*"],
      "@/utils/*": ["src/utils/*"],
      "@/icons/*": ["src/icons/*"],
      "@/common/*": ["src/common/*"],
      "@/modules/*": ["src/modules/*"],
      "@/pages/*": ["src/pages/*"],
      "@/src/*": ["src/*"],
      "@/tests/*": ["__tests__/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*", "out"]
}
